<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.wang.myDB.Controller">
   <children>
   	
   <TextField onAction="#onSearch" text="Enter search context here..." />
   <ChoiceBox fx:id="choiceBoxSearch" /> 
   
   <ListView fx:id="listView" />
      <Label fx:id="lbTitle" text="Title:">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="tfTitle" promptText="Enter album title" />
      <Label fx:id="lbScore" text="Score:">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="tfScore" promptText="Enter score 1 - 5" />
      <Label fx:id="lbGenre" text="Genre:">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <ChoiceBox fx:id="choiceBoxGenre" prefWidth="150.0" />
      <Label fx:id="releasedYear" text="Released Year:">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TextField fx:id="tfReleased" promptText="Enter year &quot;YYYY&quot;" />
      <Label fx:id="lbArtists" text="Artists: ">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TextField fx:id="tfArtist" promptText="Seperate names by &quot;;&quot;" />
      <Label fx:id="lbNation" text="Nationality:">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TextField fx:id="tfNation" promptText="Seperate nations by &quot;;&quot;" />
      <Button fx:id="btCancel" mnemonicParsing="false" onAction="#handleButtonAction" text="CANCEL" />
   <Button fx:id="btAdd" onAction="#handleButtonAction" text="ADD" />
   </children>
<!-- <Button text="DELETE" onAction="#onDelete"/> -->

</VBox>
